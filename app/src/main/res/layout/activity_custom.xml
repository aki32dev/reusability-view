<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="139dp"
        android:layout_height="139dp"
        android:layout_marginTop="62dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_sign_in" />

    <com.mp.reusability_view.view.textview.TextViewHeading1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginStart="19dp"
        android:text="Sign In"/>

    <com.mp.reusability_view.view.edittext.EditTextBase
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:drawableStart="@drawable/ic_user"
        android:hint="Email or User Name"/>

    <com.mp.reusability_view.view.edittext.EditTextBase
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawableEnd="@drawable/ic_eye"
        android:inputType="textPassword"
        android:hint="Password"/>

    <com.mp.reusability_view.view.textview.TextViewBody1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="19dp"
        android:text="Forget Password ?"/>

    <com.mp.reusability_view.view.button.ButtonBase
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:text="Sign in"/>

</LinearLayout>